<?xml version="1.0" encoding="utf-8"?>
<!-- مطابق لبطاقة العد التنازلي في تاب المحراب: تدرج، زوايا 24dp، نفس الترتيب والأحجام -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/prayer_countdown_widget_bg"
    android:gravity="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="start">

            <TextView
                android:id="@+id/widget_label_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#E6FFFFFF"
                android:text="الصلاة القادمة" />

            <TextView
                android:id="@+id/widget_next_prayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFFFF"
                android:text="--" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/widget_date_gregorian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#D9FFFFFF"
                android:gravity="end"
                android:text="--" />

            <TextView
                android:id="@+id/widget_date_hijri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="#D9FFFFFF"
                android:gravity="end"
                android:text="--" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="#F2FFFFFF"
        android:text="--" />

    <LinearLayout
        android:id="@+id/widget_occasion_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="start">

        <TextView
            android:id="@+id/widget_occasion_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#D9FFFFFF"
            android:text="" />

        <TextView
            android:id="@+id/widget_occasion_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="13sp"
            android:textColor="#D9FFFFFF"
            android:text="" />
    </LinearLayout>
</LinearLayout>
